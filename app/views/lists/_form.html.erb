<% if list.errors.any? %>
  <%= render partial: "list_errors", locals: {list: @list}%>
<% end %>

<%= form_for list, url: {action: action}, remote: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, id: "list-name-input" %>

  <%= form.submit "#{action.capitalize} List", class: "btn btn-primary" %>
<% end %>
